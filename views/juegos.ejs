<%- include("template/cabecera", {tituloWeb: "Index"}) %>

    <div class="container">

        <h1>AÃ±ade tu juego  de preferencia</h1>
        <a href="./juegos/crear" class="btn btn-success btn-block my-4">Solicita tu juego</a>

        <table class="table">
            <thead>
              <tr>
                <th scope="col" class="text-white">id</th>
                <th scope="col" class="text-white">Name</th>
                <th scope="col" class="text-white">Descripcion</th>
                <th scope="col" class="text-white">Accion</th>
              </tr>
            </thead>
            <tbody >
                <% if (arrayJuegos.length > 0) { %>
                    <% arrayJuegos.forEach(juego=> { %>
                        <tr>
                            <th scope="row" class="text-white"><%= juego.id %> </th>
                            <td class="text-white"><%= juego.nombre %> </td>
                            <td class="text-white"><%= juego.descripcion %> </td>
                            <td class="text-white">
                                <a href="juegos/<%= juego.id %>"
                                    class="btn btn-warning btn-sm">Editar</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>

